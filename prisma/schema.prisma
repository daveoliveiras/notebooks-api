generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  uid       String     @id
  name      String
  notebooks Notebook[]
}

model Notebook {
  id              Int     @id
  ram             Int
  ddr             Int
  hd              Int?
  ssd             Int?
  video           String?
  model           String
  note            String?
  resolution      String
  inch            Float?
  touch           Boolean
  clock           Float
  processor_brand String
  processor_model String
  // relation
  photos          Photo[]
  brand           Brand   @relation(fields: [brandId], references: [id])
  system          System  @relation(fields: [systemId], references: [id])
  systemId        Int
  brandId         Int
  User            User?   @relation(fields: [userUid], references: [uid])
  userUid         String?
}

model System {
  id       Int        @id @default(autoincrement())
  name     String
  version  String
  Notebook Notebook[]
}

model Brand {
  id       Int        @id @default(autoincrement())
  name     String
  Notebook Notebook[]
}

model Photo {
  id         Int       @id @default(autoincrement())
  path       String
  Notebook   Notebook? @relation(fields: [notebookId], references: [id], onDelete: Cascade)
  notebookId Int?
}
